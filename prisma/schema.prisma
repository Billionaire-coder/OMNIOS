
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Changed to sqlite for local dev ease, switch to "postgresql" for prod/supabase
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? 
  access_token      String? 
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? 
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // OMNIOS Specific
  role          String    @default("user") // "admin", "user"
  stripeCustomerId String? @map("stripe_customer_id")
  subscriptionId   String? @map("subscription_id")
  subscriptionStatus String? @map("subscription_status") // "active", "trialing", "past_due", "canceled"
  currentPeriodEnd DateTime? @map("current_period_end")
  
  projects      Project[]
  marketplaceItems MarketplaceItem[]
  marketplaceReviews MarketplaceReview[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// OMNIOS Core Models

model Project {
  id            String    @id @default(cuid())
  name          String
  description   String?
  machineState  String    @map("machine_state") // Large JSON blob of the designer state
  thumbnailUrl  String?   @map("thumbnail_url")
  
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  assets        Asset[]
  snapshots     Snapshot[]
  webhooks      WebhookConfig[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Asset {
  id        String   @id @default(cuid())
  url       String
  name      String
  size      Int
  type      String   // "image", "video", "font"
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Snapshot {
  id        String   @id @default(cuid())
  delta     String   // JSON diff or full state
  reason    String?  // "Manual Save", "Auto Save"
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model WebhookConfig {
  id              String   @id @default(cuid())
  url             String
  events          String   // JSON array of event names ["project.updated", "deployment.success"]
  secret          String?  // For signing payloads
  
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
}

// Marketplace Models

model MarketplaceItem {
  id          String   @id @default(cuid())
  type        String   // "theme", "plugin", "component"
  name        String
  description String
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  version     String   @default("1.0.0")
  price       Int      @default(0) // In cents. 0 = free.
  downloads   Int      @default(0)
  rating      Float    @default(0)
  
  // Content storage
  content     String   // JSON payload (for themes/components) or URL (for zipped plugins)
  thumbnailUrl String?
  
  reviews     MarketplaceReview[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([type])
  @@index([name])
}

model MarketplaceReview {
  id        String   @id @default(cuid())
  rating    Int      // 1-5
  comment   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemId    String
  item      MarketplaceItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}
